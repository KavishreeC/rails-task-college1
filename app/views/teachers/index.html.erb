

<h1>Teachers</h1>

<table class="table table-bordered table-striped tabe-hover ">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Dept</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.dept %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.phone %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

